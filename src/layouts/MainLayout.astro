---
import Icon from "astro-icon";
import type { LayoutProps } from "types";
import BaseLayout from "./BaseLayout.astro";

export type Props = LayoutProps;
---

<BaseLayout {...Astro.props}>
  <div class="max-w-2xl m-auto px-2 py-4">
    <main class="mb-4">
      <slot />
    </main>
    <footer
      class="border-t text-sm font-mono pt-2 text-gray-700 flex justify-between items-center"
    >
      <span>{new Date().getFullYear()} - Jafar Aziz</span>
      <a
        href="https://github.com/jfrAziz"
        referrerpolicy="no-referrer"
        target="_blank"
        title="GitHub"
      >
        <Icon class="w-6 mr-2 font-bold" name="ph:github-logo-fill" />
      </a>
    </footer>
  </div>
</BaseLayout>
